# MySQL Database Connection (Remote)
DB_HOST=your-mysql-host.com
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password
SSL_CA_PATH=ca-certificate.crt

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud APIs
# Set GOOGLE_APPLICATION_CREDENTIALS environment variable to path of your service account JSON file
# Or use: export GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Document AI Configuration
DOCUMENT_AI_PROJECT_ID=your-gcp-project-id
DOCUMENT_AI_LOCATION=us
DOCUMENT_AI_PROCESSOR_ID=your-processor-id
USE_DOCUMENT_AI_FOR_IMAGES=true

# Local SQLite Database
LOCAL_DB_PATH=local_quotation.db

# Vectors Cache Path
VECTORS_CACHE_PATH=vectors_cache.pkl

# Upload Directory
UPLOAD_DIR=uploads

# Batch Size for Embedding Generation
BATCH_SIZE=100

# Number of Workers for Parallel Vector Generation (uses hyperthreading)
# Reduce if experiencing database lock errors
NUM_WORKERS=5

# Overwrite existing vectors (true) or only generate for items without vectors (false)
OVERWRITE_EXISTING_VECTORS=true
